<div class="d-flex flex-column w-600px px-5">
  <p>Введите ответ на вопрос:</p>
  <%= form_with model: @question, local: true, method: :patch do |form| %>
    <div class="form-group">
      <p><%= @question.question %></p>

      <%= form.text_area :answer, class: "form-control my-2" %>
      <%= form.submit 'Ответить', class: "btn btn-success" %>
    </div>
  <% end %>
</div>